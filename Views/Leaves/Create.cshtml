@model OfficeAutomation.Models.Leave

@{
    ViewData["Title"] = "درخواست مرخصی جدید";
}

<link rel="stylesheet" href="https://unpkg.com/persian-datepicker@1.2.0/dist/css/persian-datepicker.min.css">
<link rel="stylesheet" href="~/css/leave-form.css" />

<div class="container mt-5" style="direction: rtl; text-align: right;">
    <div class="row justify-content-center">
        <div class="col-lg-7">
            <div class="card border-0 shadow-lg request-card">
                <div class="card-header bg-white border-0 pt-4">
                    <h4 class="fw-bold text-primary">
                        <i class="bi bi-send-plus ms-2"></i>ثبت درخواست مرخصی
                    </h4>
                    <p class="text-muted small">لطفاً بازه زمانی و علت مرخصی خود را دقیق وارد کنید.</p>
                </div>
                <div class="card-body p-4">
                    <form asp-action="Create" id="leaveForm">
                        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                        <input type="hidden" asp-for="UserId" />
                        <input type="hidden" asp-for="Status" value="در انتظار تایید" />

                        <div class="row g-4">
                            <div class="col-md-6">
                                <label class="form-label fw-bold">از تاریخ</label>
                                <div class="input-group">
                                    <span class="input-group-text bg-light"><i class="bi bi-calendar-event"></i></span>
                                    <input type="text" id="start_date_picker" class="form-control pdate" placeholder="انتخاب کنید..." readonly />
                                    <input type="hidden" asp-for="StartDate" id="StartDate" />
                                </div>
                                <span asp-validation-for="StartDate" class="text-danger small"></span>
                            </div>

                            <div class="col-md-6">
                                <label class="form-label fw-bold">تا تاریخ</label>
                                <div class="input-group">
                                    <span class="input-group-text bg-light"><i class="bi bi-calendar-check"></i></span>
                                    <input type="text" id="end_date_picker" class="form-control pdate" placeholder="انتخاب کنید..." readonly />
                                    <input type="hidden" asp-for="EndDate" id="EndDate" />
                                </div>
                                <span asp-validation-for="EndDate" class="text-danger small"></span>
                            </div>

                            <div class="col-12">
                                <div id="duration_box" class="alert alert-info d-none py-2 border-0 shadow-sm">
                                    <i class="bi bi-info-circle ms-2"></i>
                                    مدت مرخصی: <strong id="days_count">۰</strong> روز
                                </div>
                            </div>

                            <div class="col-12">
                                <label asp-for="Reason" class="form-label fw-bold">علت مرخصی / توضیحات</label>
                                <textarea asp-for="Reason" class="form-control" rows="3" placeholder="مثلاً: کارهای شخصی، مسافرت و ..."></textarea>
                                <span asp-validation-for="Reason" class="text-danger small"></span>
                            </div>
                        </div>

                        <hr class="my-4 opacity-25">

                        <div class="d-flex justify-content-between">
                            <button type="submit" class="btn btn-primary px-5 shadow">
                                <i class="bi bi-check-circle ms-1"></i> ثبت درخواست
                            </button>
                            <a asp-action="Index" class="btn btn-outline-secondary px-4">انصراف</a>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script src="https://unpkg.com/persian-date@1.1.0/dist/persian-date.min.js"></script>

    <script src="https://unpkg.com/persian-datepicker@1.2.0/dist/js/persian-datepicker.min.js"></script>

    <script src="~/js/leave-create-handler.js"></script>

    <script>
        // یک چک کوچک برای اطمینان از لود شدن
        $(document).ready(function() {
            if (typeof $.fn.persianDatepicker === 'undefined') {
                console.error("خطا: کتابخانه تقویم فارسی بارگذاری نشده است!");
            }
        });
    </script>
}