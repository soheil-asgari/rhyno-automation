@model IEnumerable<OfficeAutomation.Models.Leave>

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table table-hover table-bordered shadow-sm">
    <thead class="table-primary">
        <tr>
            <th>نام درخواست‌دهنده</th>
            <th>تاریخ شروع</th>
            <th>تاریخ پایان</th>
            <th>علت</th>
            <th>وضعیت</th>
            <th>عملیات</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.User?.FullName</td>
                <td>@item.StartDate.ToString("yyyy/MM/dd")</td>
                <td>@item.EndDate.ToString("yyyy/MM/dd")</td>
                <td>@item.Reason</td>
                <td>
                    @if (item.Status == "در انتظار تایید")
                    {
                        <span class="badge bg-warning text-dark">@item.Status</span>
                    }
                    else
                    {
                        <span class="badge bg-success">@item.Status</span>
                    }
                </td>
                <td>
                    <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-sm btn-outline-primary">ویرایش</a>
                    <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-sm btn-outline-danger">حذف</a>
                </td>
            </tr>
        }
    </tbody>
</table>
