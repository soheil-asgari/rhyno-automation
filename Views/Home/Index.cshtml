@{
    ViewData["Title"] = "میز کار";
}

<div class="row mb-5">
    <div class="col-12 border-start border-primary border-5 ps-4">
        <h1 class="display-5 fw-bold">میز کار مرکزی</h1>
        <p class="lead text-muted">تمام درخواست‌ها و نامه‌های شما در یک نگاه</p>
    </div>
</div>
<div class="row g-3 mb-4">
    <div class="col-6 col-md-3">
        <div class="p-3 bg-white shadow-sm rounded-4 border-end border-primary border-5">
            <small class="text-muted d-block">نامه‌های جدید</small>
            <span class="h4 fw-bold">۵</span> <i class="bi bi-arrow-up-short text-success"></i>
        </div>
    </div>
    <div class="col-6 col-md-3">
        <div class="p-3 bg-white shadow-sm rounded-4 border-end border-warning border-5">
            <small class="text-muted d-block">مرخصی مانده</small>
            <span class="h4 fw-bold">۱۲</span> <small>روز</small>
        </div>
    </div>
    <div class="col-6 col-md-3">
        <div class="p-3 bg-white shadow-sm rounded-4 border-end border-info border-5">
            <small class="text-muted d-block">نامه‌های ارسالی</small>
            <span class="h4 fw-bold">۲۴</span>
        </div>
    </div>
    <div class="col-6 col-md-3">
        <div class="p-3 bg-white shadow-sm rounded-4 border-end border-danger border-5">
            <small class="text-muted d-block">پیام‌های سیستمی</small>
            <span class="h4 fw-bold text-danger">۲</span>
        </div>
    </div>
</div>
<div class="row g-4">
    <div class="col-md-4">
        <div class="card h-100 shadow-sm border-0">
            <div class="card-body text-center p-5">
                <div class="bg-primary bg-opacity-10 text-primary rounded-circle d-inline-flex p-4 mb-4">
                    <i class="bi bi-envelope-paper-fill fs-1"></i>
                </div>
                <h3 class="fw-bold">نامه‌های اداری</h3>
                <p class="text-muted mb-4">مشاهده نامه‌های دریافتی و ارسال نامه جدید به همکاران</p>
                <a asp-controller="Letters" asp-action="Index" class="btn btn-primary w-100 rounded-pill py-2">ورود به کارتابل</a>
            </div>
        </div>
    </div>
    
    <div class="col-md-4">
        <div class="card h-100 shadow-sm border-0 border-top border-success border-4">
            <div class="card-body text-center p-5">
                <div class="bg-success bg-opacity-10 text-success rounded-circle d-inline-flex p-4 mb-4">
                    <i class="bi bi-calendar-check fs-1"></i>
                </div>
                <h3 class="fw-bold">درخواست مرخصی</h3>
                <p class="text-muted mb-4">ثبت مرخصی و پیگیری وضعیت تایید توسط مدیریت</p>
                <a asp-controller="Leaves" asp-action="Index" class="btn btn-success w-100 rounded-pill py-2">ثبت درخواست</a>
            </div>
        </div>
    </div>

    <div class="col-md-4">
        <div class="card h-100 shadow-sm border-0">
            <div class="card-body text-center p-5">
                <div class="bg-warning bg-opacity-10 text-warning rounded-circle d-inline-flex p-4 mb-4">
                    <i class="bi bi-shield-lock fs-1"></i>
                </div>
                <h3 class="fw-bold">امنیت و پروفایل</h3>
                <p class="text-muted mb-4">تغییر رمز عبور و ویرایش اطلاعات شخصی حساب کاربر</p>
                <a asp-area="Identity" asp-page="/Account/Manage/Index" class="btn btn-outline-warning w-100 rounded-pill py-2">تنظیمات کاربری</a>
            </div>
        </div>
    </div>
</div>