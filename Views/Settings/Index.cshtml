@model OfficeAutomation.Models.User
@{
    ViewData["Title"] = "تنظیمات سیستم";
}

<div class="container-fluid mt-4" style="direction: rtl; text-align: right;">
    <div class="row">
        <div class="col-md-3">
            <div class="card shadow-sm border-0">
                <div class="card-body text-center">
                    <div class="mb-3">
                        <div class="mx-auto" style="width: 100px; height: 100px; border-radius: 50%; background: #f8f9fa; border: 2px solid #eee; display: flex; align-items: center; justify-content: center;">
                            @if (!string.IsNullOrEmpty(Model.SignaturePath))
                            {
                                <img src="@Model.SignaturePath" style="max-width: 80px;" id="side-sig-preview" />
                            }
                            else
                            {
                                <i class="bi bi-person text-muted" style="font-size: 2rem;"></i>
                            }
                        </div>
                    </div>
                    <h6 class="fw-bold">@Model.FullName</h6>
                    <small class="text-muted d-block mb-3">@Model.JobTitle</small>
                    
                    <div class="nav flex-column nav-pills pr-0" id="settings-tabs" role="tablist">
                        <button class="nav-link active text-end mb-2" data-bs-toggle="pill" data-bs-target="#tab-profile">
                            <i class="bi bi-person-circle ms-2"></i> اطلاعات کاربری
                        </button>
                        <button class="nav-link text-end mb-2" data-bs-toggle="pill" data-bs-target="#tab-signature">
                            <i class="bi bi-pencil-square ms-2"></i> امضای دیجیتال
                        </button>
                        @if (User.IsInRole("Admin"))
                        {
                            <button class="nav-link text-end mb-2 text-danger" data-bs-toggle="pill" data-bs-target="#tab-admin" id="btn-load-users">
                                <i class="bi bi-shield-lock ms-2"></i> مدیریت کاربران
                            </button>
                        }
                    </div>
                </div>
            </div>
        </div>

        <div class="col-md-9">
            <div class="tab-content card shadow-sm p-4 border-0" style="min-height: 400px;">
                
                <div class="tab-pane fade show active" id="tab-profile">
                    <h5 class="border-bottom pb-2 mb-4">ویرایش مشخصات شخصی</h5>
                    <div class="row g-3">
                        <div class="col-md-6">
                            <label class="form-label">نام و نام خانوادگی</label>
                            <input type="text" class="form-control" value="@Model.FullName" id="p_name">
                        </div>
                        <div class="col-md-6">
                            <label class="form-label">سمت شغلی</label>
                            <input type="text" class="form-control" value="@Model.JobTitle" id="p_job">
                        </div>
                        <div class="col-md-12">
                            <button class="btn btn-primary" onclick="alert('به زودی...')">ذخیره تغییرات</button>
                        </div>
                    </div>
                </div>

                <div class="tab-pane fade" id="tab-signature">
                    <h5 class="border-bottom pb-2 mb-4">ثبت امضای دیجیتال</h5>
                    <canvas id="sig-pad" class="border rounded w-100" style="height: 200px; background: #fafafa;"></canvas>
                    <div class="mt-3">
                        <button class="btn btn-sm btn-outline-secondary" id="sig-clear">پاک کردن</button>
                        <button class="btn btn-sm btn-success" id="sig-save">ذخیره امضا</button>
                    </div>
                </div>

                @if (User.IsInRole("Admin"))
                {
                    <div class="tab-pane fade" id="tab-admin">
                        <div class="d-flex justify-content-between mb-3">
                            <h5 class="text-danger">لیست کاربران سیستم</h5>
                            <button type="button" class="btn btn-sm btn-success" id="btn-manual-add-user">
                                کاربر جدید +
                            </button>
                        </div>
                        <table class="table table-striped table-hover border">
                            <thead class="table-dark">
                                <tr>
                                    <th>نام</th>
                                    <th>سمت</th>
                                    <th>ایمیل</th>
                                    <th>عملیات</th>
                                </tr>
                            </thead>
                            <tbody id="users-list-body">
                            </tbody>
                        </table>
                    </div>
                }
            </div>
        </div>
    </div>
</div>

<div class="modal fade" id="modal-add-user" tabindex="-1" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content text-end" style="direction:rtl;">
            <div class="modal-header">
                <h5 class="modal-title">افزودن کاربر جدید</h5>
            </div>
            <div class="modal-body">
                <div class="mb-3">
                    <label class="small mb-1">نام کامل یا عنوان واحد سازمانی</label>
                    <input type="text" id="add_name" class="form-control" placeholder="مثلاً: واحد حسابداری">
                </div>
                <div class="mb-3">
                    <label class="small mb-1">سمت / نوع واحد</label>
                    <select id="add_job" class="form-select">
                        <option value="شخصی">شخصی</option>
                        <option value="واحد سازمانی">واحد سازمانی</option>
                        <option value="مدیریت">مدیریت</option>
                    </select>
                </div>
                <div class="mb-3">
                    <label class="small mb-1">نام کاربری</label>
                    <input type="email" id="add_email" class="form-control">
                </div>
                <div class="mb-3">
                    <label class="small mb-1">نوع مخاطب / جنسیت</label>
                    <select id="add_gender" class="form-select">
                        <option value="Male">آقا</option>
                        <option value="Female">خانم</option>
                        <option value="Department">واحد سازمانی / پست ثابت</option>
                    </select>
                </div>
                <div class="mb-3">
                    <label class="small mb-1">رمز عبور</label>
                    <input type="password" id="add_pass" class="form-control">
                </div>
                <div class="mb-3">
                    <label class="small mb-1">سطح دسترسی</label>
                    <select id="add_role" class="form-select">
                        <option value="User">کاربر معمولی</option>
                        <option value="Admin">مدیر سیستم</option>
                    </select>
                </div>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">انصراف</button>
                <button type="button" class="btn btn-primary" onclick="createUser()">ذخیره کاربر</button>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script src="https://cdn.jsdelivr.net/npm/signature_pad@4.0.0/dist/signature_pad.umd.min.js"></script>
    <script>
        // ۱. تابع ساخت کاربر جدید
        window.createUser = function() {
        const params = new URLSearchParams();
            
        // گرفتن مقادیر از ورودی‌ها
        const name = document.getElementById('add_name').value;
        const job = document.getElementById('add_job').value;
        const email = document.getElementById('add_email').value;
        const gender = document.getElementById('add_gender').value; // اضافه شد
        const pass = document.getElementById('add_pass').value;
        const role = document.getElementById('add_role').value;

        // پر کردن پارامترها برای ارسال به سرور
        params.append('fullName', name);
        params.append('jobTitle', job);
        params.append('email', email);
        params.append('gender', gender); // این خط بسیار حیاتی بود
        params.append('password', pass);
        params.append('role', role);

        fetch('/Settings/CreateUser', {
        method: 'POST',
        body: params
        })
        .then(res => {
        if (!res.ok) throw new Error('خطا در پاسخ سرور');
        return res.json();
        })
        .then(data => {
        if (data.success) {
        alert("کاربر با موفقیت ساخته شد.");
        window.location.reload();
        } else {
        alert("خطا: " + data.message);
        }
        })
        .catch(err => {
        console.error("Fetch error:", err);
        alert("خطا در ارتباط با سرور");
        });
        };

        // ۲. تابع حذف کاربر
        window.deleteUser = function(id) {
        if(confirm("آیا از حذف این کاربر اطمینان دارید؟")) {
        const params = new URLSearchParams();
        params.append('userId', id);
        fetch('/Settings/DeleteUser', {
        method: 'POST',
        body: params
        }).then(() => location.reload());
        }
        };

        document.addEventListener('DOMContentLoaded', function() {
        // ۳. مدیریت امضا
        const canvas = document.getElementById('sig-pad');
        if (canvas) {
        const pad = new SignaturePad(canvas);
        const clearBtn = document.getElementById('sig-clear');
        const saveBtn = document.getElementById('sig-save');
                
        if(clearBtn) clearBtn.addEventListener('click', () => pad.clear());
                
        if(saveBtn) {
        saveBtn.addEventListener('click', function() {
        if (pad.isEmpty()) {
        alert("ابتدا امضا را ترسیم کنید.");
        return;
        }
        fetch('/Settings/SaveSignature', {
        method: 'POST',
        headers: { 'Content-Type': 'application/json' },
        body: JSON.stringify({ imageData: pad.toDataURL() })
        }).then(() => {
        alert("امضا با موفقیت ذخیره شد.");
        location.reload();
        });
        });
        }
        }

        // ۴. لود لیست کاربران برای ادمین
        const btnLoad = document.getElementById('btn-load-users');
        if(btnLoad) {
        btnLoad.addEventListener('click', function() {
        fetch('/Settings/GetAllUsers')
        .then(res => res.json())
        .then(users => {
        let html = '';
        const listBody = document.getElementById('users-list-body');
        if(listBody) {
        users.forEach(u => {
        html += `<tr>
        <td>${u.fullName || '---'}</td>
        <td>${u.jobTitle || '---'}</td>
        <td>${u.userName}</td>
        <td>
        <button class="btn btn-sm btn-danger" onclick="deleteUser('${u.id}')">حذف</button>
        </td>
        </tr>`;
        });
        listBody.innerHTML = html;
        }
        });
        });
        }

        // ۵. باز کردن مودال افزودن کاربر
        const btnManual = document.getElementById('btn-manual-add-user');
        if (btnManual) {
        btnManual.addEventListener('click', function () {
        const modalElement = document.getElementById('modal-add-user');
        const myModal = new bootstrap.Modal(modalElement);
        myModal.show();
        });
        }
        });
    </script>
}