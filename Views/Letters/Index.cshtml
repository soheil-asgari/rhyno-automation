@model IEnumerable<OfficeAutomation.Models.Letter>

@{
    ViewData["Title"] = "کارتابل نامه‌ها";
}

<div class="d-flex justify-content-between align-items-center mb-4">
    <h1><i class="bi bi-envelope-paper"></i> کارتابل نامه‌ها</h1>
    <p>
        <a asp-action="Create" class="btn btn-primary btn-lg shadow-sm">
            <i class="bi bi-plus-lg"></i> ایجاد نامه جدید
        </a>
    </p>
</div>

<table class="table table-hover table-striped shadow-sm">
    <thead class="table-dark">
        <tr>
            <th>@Html.DisplayNameFor(model => model.Title)</th>
            <th>@Html.DisplayNameFor(model => model.SentDate)</th>
            <th>فرستنده</th>
            <th>گیرنده</th>
            <th>عملیات</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td><strong>@Html.DisplayFor(modelItem => item.Title)</strong></td>
                <td dir="ltr">
                    @* نمایش تاریخ به صورت ساده - در مرحله بعد شمسی می‌کنیم *@
                    @item.SentDate.ToString("yyyy/MM/dd HH:mm")
                </td>
                <td>@item.Sender?.FullName</td>
                <td>@item.Receiver?.FullName</td>
                <td>
                    <div class="btn-group" role="group">
                        <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-info btn-sm text-white">مشاهده</a>
                        <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-danger btn-sm">حذف</a>
                    </div>
                </td>
            </tr>
        }
    </tbody>
</table>