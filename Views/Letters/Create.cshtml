@model OfficeAutomation.Models.Letter

@{
    ViewData["Title"] = "ارسال نامه جدید";
}

<div class="container mt-4">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="card shadow border-0">
                <div class="card-header bg-primary text-white">
                    <h4 class="mb-0"><i class="bi bi-pencil-square"></i> نوشتن نامه جدید</h4>
                </div>
                <div class="card-body p-4">
                    <form asp-action="Create">
                        <div asp-validation-summary="ModelOnly" class="text-danger"></div>

                        <div class="mb-3">
                            <label class="form-label fw-bold">موضوع نامه</label>
                            <input asp-for="Title" class="form-control" placeholder="موضوع را وارد کنید..." />
                            <span asp-validation-for="Title" class="text-danger"></span>
                        </div>

                        <div class="mb-3">
                            <label class="form-label fw-bold">گیرنده نامه</label>
                            <select asp-for="ReceiverId" class="form-select" asp-items="ViewBag.ReceiverId">
                                <option value="">--- انتخاب همکار ---</option>
                            </select>
                            <span asp-validation-for="ReceiverId" class="text-danger"></span>
                        </div>

                        <div class="mb-3">
                            <label class="form-label fw-bold">متن نامه</label>
                            <textarea asp-for="Body" class="form-control" rows="6" placeholder="متن نامه را اینجا بنویسید..."></textarea>
                            <span asp-validation-for="Body" class="text-danger"></span>
                        </div>

                        <div class="d-grid gap-2 d-md-flex justify-content-md-end">
                            <div class="mb-3 p-3 bg-light border rounded">
                                <label class="form-label fw-bold text-muted">امضای شما (پیش‌فرض):</label>
                                <div class="text-center">
                                    <img src="@ViewBag.UserSignature" style="max-height: 80px; mix-blend-mode: multiply;" alt="هنوز امضایی ثبت نشده است" />
                                    <p class="small text-muted">این امضا به صورت خودکار پای نامه درج خواهد شد.</p>
                                </div>
                            </div>
                            <a asp-action="Index" class="btn btn-outline-secondary">بازگشت</a>
                            <button type="submit" class="btn btn-primary px-5">ارسال نامه</button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>